                li
                  a(href='#') Something else here
                li.divider(role='separator')
                li.dropdown-header Nav header
                li
                  a(href='#') Separated link
                li
                  a(href='#') One more separated link

    .container
      h2 Remote cars
      p
        .col-md-6
          h3 Commands
          p#predefined 
          form(action="#")
          .form-group
            textarea.form-control#commandsTextarea
          .form-group
            div#resultComment
          a.btn.btn-primary#sendCommandsBtn(href="#") Send commands
        .col-md-6
          table.table.table-bordered.table-striped#resultTable 
        
    footer.footer
      .container
        p.text-muted Place sticky footer content here.

    script(src='js/jquery-3.2.1.min.js')
